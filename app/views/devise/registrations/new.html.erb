<div class="form-wrapper">
  <h1 style='text-align:center;'><%= t('.sign_up') %></h1>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>
    
    <div id="cover-user" class="img-profile">
      <%= image_tag 'noimage.png',class:'profile-user'%>
    </div>
      <%= f.attachment_field :profile_image, autofocus: true, autocomplete: 'profile_image'%>
    
    <div class="form-item">
      <%= f.text_field :name, autofocus: true, autocomplete: 'name',:placeholder => "name" %>
    </div>
  
    <div class="form-item">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email',:placeholder => "email" %>
    </div>
  
    <div class="form-item">
      <%= f.password_field :password, autocomplete: 'current-password',required: true,minlength: @minimum_password_length,maxlength: '30',:placeholder => "password" %>
  
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>
  
    <div class="form-item">
      <%= f.password_field :password_confirmation, autocomplete: 'current-password',:placeholder => "password_confirmation" %>
    </div>
    
    <div class="form-item">
      <%= f.text_area :profile, autofocus: true,class:'form-control', autocomplete: 'profile', :placeholder => "一言入力",rows:3 %>
    </div>
    
  
    <div class="button-panel">
      <%= f.submit t('.sign_up'), class: 'button' %>
    </div>
  <% end %>
  
</div>
