<div class="container-login">
  <h1>ユーザー詳細画面</h1>
  
  <%= form_for @user do |f| %>
    
    
    <div class="form-group">
      <%= f.label :name,'名前' %>
      <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control',:placeholder => "name" %>
    </div>
  
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control',:placeholder => "email" %>
    </div>
  
    

    
    
    <div class="form-group">
      <%= f.label :profile,'一言' %>
      <%= f.text_area :profile, autofocus: true, autocomplete: 'profile', class: 'form-control',:placeholder => "コメント入力",rows:3 %>
    </div>
    
    <div class="form-group">
      <%= f.label :profile_image,'プロフィール画像' %><br>
      <%= f.attachment_field :profile_image, autofocus: true, autocomplete: 'profile_image',class: 'form-control'%>
    </div>
  
    
      <%= f.submit  class: 'btn btn-primary btn-block' %>
    
    

 <% end %>

