<div>
  <h2>コメント詳細</h2>
  <div>
    投稿者<%= @comment.name %><br>
    <hr>
    タイトル<%= @comment.title %><br>
    <hr>
    質問内容<%= @comment.question %>
  </div><br><br>
  <div>
    <%=link_to '質問一覧',board_comments_path %>
  </div>
</div>
<hr>



<div>
  <h3>回答投稿</h3>
  <%= form_with model: [@board,@comment,@answer], local: true do |f| %>
    <%= f.hidden_field :comment_id, {value: @comment.id} %>
    <div class="form-group">
      <%= f.text_field :name, class:'form-control',:placeholder => "name" %>
    </div>
    <div class="form-group">
      <%= f.text_area :content,rows:4, class:'form-control',:placeholder => "content" %>
    </div>
    <div class="text-center">
      <%= f.submit '回答',class:'btn btn-primary'%>
    </div>
    
  <% end %>
</div>