<h2>コメント一覧</h2>
  <% @comments.each do |comment| %>
  <div>
    投稿者<%= comment.name %><br>
    <hr>
    <%= link_to board_comment_path(id: comment) do %>
      タイトル<%= comment.title %><br>
    <% end %>
    <hr>
    質問内容<%= comment.question %>
  </div><br>

  <div>
    <%=link_to '編集',edit_board_comment_path(id: comment) %>
    <%=link_to '削除',board_comment_path(id: comment),method: :delete, data:{confirm: '削除しますか'} %>
  </div>
<% end %>
<%= link_to '投稿詳細', board_path(@board)%>